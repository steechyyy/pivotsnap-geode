{
	"geode": "4.0.1",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074"
	},
	"id": "steechy.pivot_snap",
	"name": "Pivot Snap",
	"version": "v1.1.0",
	"developer": "steechy",
	"description": "allows easy snapping when warping objects",

	"settings": {

		"title": {
			"type": "title",
			"name": "Pivot Snap Settings"
		},
		
		"snap-mode": {
			"name": "Snap mode",
			"description": "change the snapping behavior of the pivot point to your liking!!",
			"type": "string",
			"default": "keybind",
			"one-of": [ "keybind", "button" ]
		}

	},

	"dependencies": [
		{
			"id": "geode.custom-keybinds",
			"version": ">=v1.1.0",
			"importance": "required",
			"platforms": [ "win" ]
		},
		{
			"id": "geode.node-ids",
			"version": "v1.18.0",
			"importance": "required"
		}
	],

	"resources": {
		"sprites": [
			"resources/GJ_snapBtn_001.png"
		]
	},

	"links": {
		"source": "https://github.com/steechyyy/pivotsnap-geode"
	},

	"tags": [ "editor", "utility", "enhancement"]

}
