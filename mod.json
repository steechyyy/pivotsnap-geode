{
	"geode": "4.0.1",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074"
	},
	"id": "steechy.pivot_snap",
	"name": "Pivot Snap",
	"version": "v1.0.0",
	"developer": "steechy",
	"description": "allows easy snapping when warping objects",

	"settings": {

		"title": {
			"type": "title",
			"name": "Pivot Snap Settings"
		},

		"snap-mode": {
			"name": "Snap mode",
			"description": "change the snapping behavior of the pivot point to your liking (Currently only keybind but will add more)",
			"type": "string",
			"default": "keybind",
			"one-of": [ "keybind" ]
		}

	},

	"dependencies": [
		{
			"id": "geode.custom-keybinds",
			"version": ">=v1.1.0",
			"importance": "required",
			"platforms": ["win"]
		}
	],

	"links": {
		"source": "https://github.com/steechyyy/pivotsnap-geode"
	},

	"tags": [ "editor", "utility", "enhancement", "modtober24" ]

}
